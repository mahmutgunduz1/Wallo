<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Settings Card Style -->
    <style name="SettingsCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">#1E293B</item>
        <item name="cardBackgroundColor">#1E293B</item>
    </style>

    <!-- Settings Item Layout Style -->
    <style name="SettingsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Settings Icon Style -->
    <style name="SettingsIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Settings Text Style -->
    <style name="SettingsText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#F8FAFC</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/andika_new_basic</item>
    </style>

    <!-- Settings Arrow Style -->
    <style name="SettingsArrow">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:src">@drawable/baseline_airline_stops_24</item>
        <item name="android:tint">#94A3B8</item>
    </style>

    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources> 